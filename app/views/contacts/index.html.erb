<div class="page-header">
  <h1>Contacts</h1>
</div>

<p><a href="/contacts/new" class="btn btn-primary">Add a New Contact</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>HR</th>
      <th>Kellogg Alum</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.company_id %></td>
        <td>
          <% if contact.hr? %>
            <button type="button" class="btn btn-default btn-success">
              <span class="glyphicon glyphicon-ok"></span>
            </button>
          <% else %>
            <button type="button" class="btn btn-default btn-danger">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          <% end %>
        </td>
        <td>
        <% if contact.kelloggalum? %>
            <button type="button" class="btn btn-default btn-success">
              <span class="glyphicon glyphicon-ok"></span>
            </button>
          <% else %>
            <button type="button" class="btn btn-default btn-danger">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          <% end %>
        </td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

