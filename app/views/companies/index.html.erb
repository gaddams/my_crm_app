<div class="page-header">
  <h1>Companies</h1>
</div>

<p><a href="/companies/new" class="btn btn-primary">Add a New Company</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Owner</th>
      <th>Conversation history</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.status %></td>
        <td><%= company.owner_id %></td>
        <td><%= company.conversation_history %></td>
        <td>
          <a href="/companies/<%= company.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/companies/<%= company.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_company/<%= company.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

