<div class="page-header">
  <h1>Add Interaction</h1>
</div>

<% if @interaction.errors.any? %>
  <% @interaction.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_interaction" class="form-horizontal">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @interaction.user_id %>">
    </div>
  </div>

  <!-- Label and input for contact_id -->
  <div class="form-group">
    <label for="contact_id" class="col-sm-2 control-label">
      Contact
    </label>
    <div class="col-sm-10">
      <input type="text" id="contact_id" name="contact_id" placeholder="Contact" class="form-control" value="<%= @interaction.contact_id %>">
    </div>
  </div>

  <!-- Label and input for date -->
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">
      Date
    </label>
    <div class="col-sm-10">
      <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @interaction.date %>">
    </div>
  </div>

  <!-- Label and input for message -->
  <div class="form-group">
    <label for="message" class="col-sm-2 control-label">
      Message
    </label>
    <div class="col-sm-10">
      <textarea id="message" name="message" placeholder="Message" class="form-control" rows="3"><%= @interaction.message %></textarea>
    </div>
  </div>

  <!-- Label and input for lastremindedon -->
  <div class="form-group">
    <label for="lastremindedon" class="col-sm-2 control-label">
      Lastremindedon
    </label>
    <div class="col-sm-10">
      <input type="text" id="lastremindedon" name="lastremindedon" placeholder="Lastremindedon" class="form-control" value="<%= @interaction.lastremindedon %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Interaction" class="btn btn-primary">
    </div>
  </div>
</form>
